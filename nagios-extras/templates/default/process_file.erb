<% @nodes.sort.each do |n| -%>
<% next unless n.chef_environment == "production" or n.chef_environment == "pre-production" or n.chef_environment == "maintenance" -%>
<% if n.chef_environment == "production" -%>
[<%= @time %>] ENABLE_HOST_NOTIFICATIONS;<%= n['fqdn'] %>
[<%= @time %>] ENABLE_HOST_SVC_NOTIFICATIONS;<%= n['fqdn'] %>
<% else -%>
[<%= @time %>] DISABLE_HOST_NOTIFICATIONS;<%= n['fqdn'] %>
[<%= @time %>] DISABLE_HOST_SVC_NOTIFICATIONS;<%= n['fqdn'] %>
<% end -%>
<% end -%>
